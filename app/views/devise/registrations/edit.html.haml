%h2
  Редактирование моего профиля
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {autocomplete: 'off', method: :put }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, label: 'Ваш email'
    = f.input :current_password, label: 'Для изменений введите секретное слово'
    = f.input :password, label: 'Новый шифр'
    = f.input :password_confirmation, label: 'Повторите шифр'
  .form-actions
    = f.button :submit, 'Обновить свои данные'
    = link_to t('.destroy_account'), registration_path(resource_name), data: { confirm: 'Вы уверены?' }, method: :delete, class: 'btn btn-danger'
%p
= link_to t('.back'), :back, class: 'btn btn-inverse'
= link_to t('.exit'), destroy_user_session_path, method: :delete, class: 'btn btn-inverse'