%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to t('.title'), root_path, id: 'logo'
      %nav
        %ul.nav.pull-right
          %li= link_to t('.plan'), plan_path
          %li= link_to t('.posts'), posts_path
          - if can? :manage, :all
            %li= link_to t('.admin'), admin_path
          - unless user_signed_in?
            %li=link_to t('.login'), user_omniauth_authorize_path(:github)
          = form_tag search_path, method: :get, class: 'navbar-search pull-right' do
            = text_field_tag :search, params[:search], class: 'search-query', placeholder: t('psearch')
